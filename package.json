{
  "name": "xivdyetools-worker",
  "version": "1.4.12",
  "description": "Cloudflare Worker API for XIV Dye Tools Community Presets",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:production": "wrangler deploy --env production",
    "db:migrate": "wrangler d1 execute xivdyetools-presets --remote --file=./schema.sql",
    "db:migrate:local": "wrangler d1 execute xivdyetools-presets --local --file=./schema.sql",
    "db:migrate:indexes": "wrangler d1 execute xivdyetools-presets --remote --file=./migrations/002_add_composite_indexes.sql",
    "db:seed": "npx tsx scripts/migrate-presets.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@xivdyetools/auth": "^1.0.2",
    "@xivdyetools/crypto": "^1.0.0",
    "@xivdyetools/logger": "^1.1.2",
    "@xivdyetools/rate-limiter": "^1.3.0",
    "@xivdyetools/types": "^1.1.1",
    "hono": "^4.11.9"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.10",
    "@cloudflare/workers-types": "^4.20251205.0",
    "@types/node": "^25.2.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@xivdyetools/test-utils": "^1.0.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.59.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
