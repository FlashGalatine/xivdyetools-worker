{
  "name": "xivdyetools-worker",
  "version": "1.1.0",
  "description": "Cloudflare Worker API for XIV Dye Tools Community Presets",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:production": "wrangler deploy --env production",
    "db:migrate": "wrangler d1 execute xivdyetools-presets --remote --file=./schema.sql",
    "db:migrate:local": "wrangler d1 execute xivdyetools-presets --local --file=./schema.sql",
    "db:seed": "npx tsx scripts/migrate-presets.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "hono": "^4.6.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.14",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^22.19.1",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.53.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
